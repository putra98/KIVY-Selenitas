<ContentNavigationDrawer>:
	MDBoxLayout:
		orientation: "vertical"
	    padding: "10dp"
	    spacing: "8dp"
		MDBoxLayout:
			orientation: "vertical"
			adaptive_height: True
	    	padding: "10dp"
			md_bg_color:  app.theme_cls.primary_color
		    AnchorLayout:
		        anchor_x: "left"
		        size_hint_y: None
		        height: avatar.height

		        Image:
		            id: avatar
		            size_hint: None, None
		            size: "56dp", "56dp"
	    			source: 'assets/image/msp2.png'


		    MDLabel:
		        text: "KivyMD library"
		        font_style: "Button"
		        size_hint_y: None
		        color: 1,1,1,1
		        height: self.texture_size[1]

		    MDLabel:
		        text: "kivydevelopment@gmail.com"
		        font_style: "Caption"
		        size_hint_y: None
		        color: 1,1,1,1
		        height: self.texture_size[1]

	    ScrollView:

	        MDList:
				OneLineIconListItem:
				    text: "Home"
		        	color: 1,1,1,1
	                on_press:
	                    root.nav_drawer.set_state("close")
	                    root.screen_manager.current = "home_name"

				    IconLeftWidget:
				        icon: "home"
			        	theme_text_color: "Custom"
			        	text_color: app.theme_cls.primary_color

				# OneLineIconListItem:
				#     text: "Profile"
