				#         icon: "account-circle"
			 #        	theme_text_color: "Custom"
			 #        	text_color: app.theme_cls.primary_color

				OneLineIconListItem:
				    text: "About"
	                on_press:
	                    root.nav_drawer.set_state("close")
	                    root.screen_manager.current = "login_name"

				    IconLeftWidget:
				        icon: "information-outline"
			        	theme_text_color: "Custom"
			        	text_color: app.theme_cls.primary_color
				OneLineIconListItem:
				    text: "Logout"
	                on_press:
	                    root.nav_drawer.set_state("close")
	                    root.screen_manager.current = "login_name"

