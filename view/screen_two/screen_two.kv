					MDLabel:
						text: ':'
						bold: True
						color: app.theme_cls.primary_color
						adaptive_height: True
						size_hint_x: .05
					MDLabel:
						id: hasil
						text: 'Hasil'
						bold: True
						color: app.theme_cls.primary_color
						adaptive_height: True
						# size_hint_x: .05
