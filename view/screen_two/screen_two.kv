					MDLabel:
						text: ':'
						bold: True
						color: app.theme_cls.primary_color
						adaptive_height: True
						size_hint_x: .05
					MDLabel:
						id: hasil_ph
						text: 'Hasil'
						bold: True
						color: 1,0,0,1
						adaptive_height: True
						# size_hint_x: .05
			MDBoxLayout:
				adaptive_height: True
				MDLabel:
					text: 'HASIL '
					bold: True
					color: 0,1,0,1
